{
  "name": "carbon-charts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "ci-check": "yarn format:diff && yarn test",
    "clean": "yarn cache clean && yarn install",
    "eject": "react-scripts eject",
    "format": "prettier --write \"**/*.{js,md,scss}\"",
    "format:diff": "prettier --list-different \"**/*.{js,md,scss}\"",
    "format:staged": "prettier --write",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "dependencies": {
    "@carbon/charts": "^0.15.7",
    "@carbon/charts-react": "^0.15.6",
    "@carbon/colors": "10.4.0",
    "@carbon/grid": "^10.5.0",
    "@carbon/icons-react": "^10.5.0",
    "@storybook/addon-info": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "carbon-addons-data-viz-react": "^1.23.0",
    "carbon-components": "^10.5.0",
    "carbon-components-react": "^7.5.0",
    "carbon-icons": "^7.0.7",
    "classnames": "^2.2.6",
    "d3": "^5.11.0",
    "format": "^0.2.2",
    "lodash": "^4.17.15",
    "nvd3": "^1.8.6",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-minimal-pie-chart": "^5.0.0",
    "react-router-dom": "^4.4.0-beta.8",
    "react-scripts": "2.1.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "node-sass": "^7.0.0",
    "prettier": "^1.17.0"
  },
  "resolutions": {
    "d3-selection": "1.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn format:staged",
      "git add"
    ],
    "*.{scss,css}": [
      "yarn format:staged",
      "git add"
    ],
    "*.md": [
      "yarn format:staged",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
